{
  "name": "mindscape-pwa",
  "description": "Neurodiverse Mind Mapping Platform - Progressive Web App",
  "serviceType": "combined",
  "billing": {
    "buildPlan": "nf-compute-200-4",
    "deploymentPlan": "nf-compute-100-1"
  },
  "deployment": {
    "instances": 1,
    "resources": {
      "cpu": "200m",
      "memory": "512Mi"
    }
  },
  "buildSettings": {
    "dockerfile": {
      "dockerFilePath": "/Dockerfile",
      "dockerWorkDir": "/"
    }
  },
  "source": {
    "type": "git",
    "projectUrl": "https://github.com/MyMindVentures/MindScape-PWA",
    "projectType": "github",
    "projectBranch": "main",
    "buildType": "dockerfile",
    "dockerfile": "Dockerfile"
  },
  "environment": {
    "NODE_ENV": "production",
    "PORT": "80"
  },
  "ports": [
    {
      "name": "http",
      "internalPort": 80,
      "externalPort": 80,
      "protocol": "HTTP",
      "public": true
    }
  ],
  "healthCheck": {
    "path": "/",
    "port": 80,
    "interval": 30
  },
  "scaling": {
    "minInstances": 1,
    "maxInstances": 3,
    "targetCPU": 70
  },
  "vcsData": {
    "projectUrl": "https://github.com/MyMindVentures/MindScape-PWA",
    "projectType": "github",
    "projectBranch": "main"
  }
}
